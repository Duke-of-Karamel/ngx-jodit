{
  "name": "ngx-jodit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ngx-jodit/src",
  "prefix": "ngx",
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/libs/ngx-jodit"],
      "options": {
        "project": "libs/ngx-jodit/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ngx-jodit/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ngx-jodit/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/ngx-jodit"],
      "options": {
        "jestConfig": "libs/ngx-jodit/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/ngx-jodit/src/**/*.ts",
          "libs/ngx-jodit/src/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
